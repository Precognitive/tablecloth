{
  "name": "tablecloth",
  "version": "0.0.1-rc1",
  "description": "A tool for keeping your interactions with BigTable nice and tidy.",
  "main": "index.js",
  "scripts": {
    "test": "npx jest",
    "lint": "npx semistandard",
    "flow": "flow",
    "build": "flow-remove-types --out-dir dist/ src/ --ignore \"__tests__|__mocks__\""
  },
  "engines": {
    "node": ">=8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Precognitive/tablecloth.git"
  },
  "keywords": [
    "bigtable"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Precognitive/tablecloth/issues"
  },
  "homepage": "https://github.com/Precognitive/tablecloth#readme",
  "dependencies": {
    "@google-cloud/bigtable": "^0.16.0",
    "flow-remove-types": "^1.2.3",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "flow-bin": "^0.84.0",
    "jest": "^23.6.0",
    "rollup": "^0.36.0",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-flow": "^1.1.1",
    "semistandard": "^12.0.1"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  },
  "semistandard": {
    "env": [
      "jest"
    ]
  }
