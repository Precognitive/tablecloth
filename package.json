    "url": "git+https://github.com/Precognitive/tablecloth.git"
  },
  "keywords": [
    "bigtable"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Precognitive/tablecloth/issues"
  },
  "homepage": "https://github.com/Precognitive/tablecloth#readme",
  "dependencies": {
    "@google-cloud/bigtable": "^1.0.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "codecov": "^3.1.0",
    "eslint": "^5.8.0",
    "eslint-plugin-flowtype": "^3.2.2",
    "flow-bin": "^0.85.0",
    "flow-remove-types": "^1.2.3",
    "jest": "^23.6.0",
    "semistandard": "^13.0.0"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "^.+\\.js?$": "babel-jest"
