{
  "name": "tablecloth",
  "version": "0.0.1-rc1",
  "description": "A tool for keeping your interactions with BigTable nice and tidy.",
  "main": "index.js",
  "scripts": {
    "test": "jest --passWithNoTests ./src",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "codecov": "codecov",
    "build": "tsc",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">=8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Precognitive/tablecloth.git"
  },
  "keywords": [
    "bigtable",
    "tablecloth"
  ],
  "author": "@Precognitive",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Precognitive/tablecloth/issues"
  },
  "homepage": "https://github.com/Precognitive/tablecloth#readme",
  "dependencies": {
    "@google-cloud/bigtable": "^1.0.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/joi": "^14.3.0",
    "@types/lodash": "^4.14.120",
    "@types/node": "^10.12.18",
    "codecov": "^3.1.0",
    "jest": "^23.6.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.4"
  }
}
